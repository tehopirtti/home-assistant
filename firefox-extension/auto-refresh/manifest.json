{
    "manifest_version": 3,
    "name": "Home Assistant Lovelace auto refresh",
    "version": "1.0",
    "description": "Reload current view when update button appears.",
    "author": "tehopirtti",
    "homepage_url": "https://github.com/tehopirtti/home-assistant/firefox-extension/auto-refresh",
    "developer": {
        "name": "tehopirtti",
        "url": "https://tehopirtti.net"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/lovelace/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}